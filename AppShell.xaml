<?xml version="1.0" encoding="UTF-8" ?>
<Shell
    x:Class="gtdmaui.AppShell"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:local="clr-namespace:gtdmaui"
    Shell.FlyoutBehavior="Flyout"
    Title="gtdmaui">

    <ShellContent
        Title="Home"
        ContentTemplate="{DataTemplate local:MainPage}"
        Route="MainPage" />
    <ShellContent
    Title="Item Edit"
    ContentTemplate="{DataTemplate local:ItemEditPage}"
    Route="ItemEditPage" />

</Shell>
