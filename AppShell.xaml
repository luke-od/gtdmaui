<?xml version="1.0" encoding="utf-8" ?>
<Shell xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
       xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
       xmlns:local="clr-namespace:gtdmaui"
       x:Class="gtdmaui.AppShell">
    <TabBar>
        <Tab Title="Inbox">
            <ShellContent ContentTemplate="{DataTemplate local:InboxPage}" />
        </Tab>
        <Tab Title="Next Actions">
            <ShellContent ContentTemplate="{DataTemplate local:NextActionsPage}" />
        </Tab>
        <Tab Title="Projects">
            <ShellContent ContentTemplate="{DataTemplate local:ProjectsPage}" />
        </Tab>
    </TabBar>
</Shell>