<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="gtdmaui.ProjectDetailPage"
             Title="{Binding Name}">

	<StackLayout Padding="10">
		<Label Text="Project Name:" FontAttributes="Bold"/>
		<Label Text="{Binding Name}" />

		<Label Text="Description:" FontAttributes="Bold" Margin="0,10,0,0"/>
		<Label Text="{Binding Description}" />

		<Label Text="Deadline:" FontAttributes="Bold" Margin="0,10,0,0"/>
		<Label Text="{Binding Deadline, StringFormat='{0:MM/dd/yyyy}'}" />

		<Label Text="Is Active:" FontAttributes="Bold" Margin="0,10,0,0"/>
		<Switch IsToggled="{Binding IsActive}" />

		<Label Text="Items:" FontAttributes="Bold" Margin="0,10,0,0"/>
		<CollectionView ItemsSource="{Binding Items}">
			<CollectionView.ItemTemplate>
				<DataTemplate>
					<TextCell Text="{Binding Title}" />
				</DataTemplate>
			</CollectionView.ItemTemplate>
		</CollectionView>
	</StackLayout>
</ContentPage>